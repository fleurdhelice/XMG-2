%%

Stmt : Frame    {$$=$1}
     | FrameRel {$$=$1};

Frame :  (Var)? '[' Type  (Pair // ComaOrNot )* ']' {$$=frame:frame($1,$3,$4)};

Type : (Var // '&')+ ',' {$$=$1};

ComaOrNot : ( ',' )? {$$=$1};

Pair : id ':' VarOrFrame {$$=frame:pair($1,$3)};

VarOrFrame : Var {$$=$1} | Frame {$$=$1};

Var : id {$$=$1} 
    | '?' id {$$=$2};

FrameRel : Var '>*' Var {$$=frame:dom($1,$3,$2)};

%%
